<p class="navbar-text pull-right">
  <% if user_signed_in? %>
    <span class="alert alert-success">Logged in as <strong><%= current_user.email %></strong></span>
    <%= link_to "Home", welcome_index_path, class: "btn btn-primary glyphicon glyphicon-home" %> |
    <%= link_to 'Edit profile', edit_user_registration_path, class: "btn btn-primary glyphicon glyphicon-pencil" %> |
    <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
    <% else %>
    <%= link_to "Home", welcome_index_path, class: "btn btn-primary glyphicon glyphicon-home" %>
    <%= link_to "Log In", new_user_session_path, class: "btn btn-primary" %>
    <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
  <% end %>
</p>