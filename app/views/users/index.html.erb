<div class="col-md-6">
  <div class="panel panel-primary">
    <div class="panel-heading"><h4>Listing Users</h4></div>
    <div class="panel-body">
      <p id="notice"><%= notice %></p>

      <table>
        <thead>
          <tr>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><strong><%= user.email %></strong></td>
              <td><%= link_to 'Show', user, class: "btn btn-primary" %></td>
              <td><%= link_to 'Edit', edit_user_registration_path(user), class: "btn btn-primary" %></td>
              <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New User', new_user_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
